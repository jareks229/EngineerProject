@model List<string>

@{
    ViewData["Title"] = "Index";
}

<br/>
<br/>

<div class="container">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <h2 class="animated bounceIn"><i class="fas fa-user-circle"></i> Menadżer Ról Aplikacji</h2>

            <p class="animated bounceIn"><i class="fas fa-filter"></i> Dostępne opcje</p>
            <hr>
            <ul>
                <li><a asp-action="Add"><i class="fas fa-plus"></i> Dodaj rolę</a></li>
                <li><a asp-action="Remove"><i class="fas fa-user-minus"></i> Usuń rolę</a></li>
                <li><a asp-action="AddToRole"><i class="fas fa-user-plus"></i> Dodaj użytkownika do roli</a></li>
            </ul>
        </div>
    </div>
</div>

<table class="table">
    <thead>
    <tr>
        <th>
            Nazwa roli aplikacji
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                @item
            </td>
			
            <td>
                <a asp-action="Edit" asp-route-roleName="@item">Edytuj</a> |
                <a asp-action="Remove" asp-route-roleName="@item">Usuń</a>
            </td>
        </tr>
    }
    </tbody>
</table>

