@model ProjektInzynier.Models.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<br/>

<br/>

<div class="container">
    <form class="form-horizontal" role="form" method="POST" asp-action="Register">
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <h2>Rejestracja nowego użytkownika</h2>
                <hr>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3 field-label-responsive">
                <label asp-for="Login">Nazwa użytkownika</label>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <div class="input-group mb-2 mr-sm-2 mb-sm-0">
                        <div class="input-group-addon" style="width: 2.6rem"><i class="fa fa-user"></i></div>
                        <input asp-for="Login" type="text" name="Login" class="form-control" id="name"
                               placeholder="Nazwa Użytkownika" required autofocus>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-control-feedback">
                    <span class="text-danger align-middle">
                        Błędny login !
                    </span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3 field-label-responsive">
                <label asp-for="Email">Adres E-Mail</label>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <div class="input-group mb-2 mr-sm-2 mb-sm-0">
                        <div class="input-group-addon" style="width: 2.6rem"><i class="fa fa-at"></i></div>
                        <input asp-for="Email" type="text" name="Email" class="form-control" id="email"
                               placeholder="przyklad@przyklad.pl" required autofocus>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-control-feedback">
                    <span class="text-danger align-middle">
                        Proszę wpisać poprawne dane !
                    </span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3 field-label-responsive">
                <label asp-for="Password" for="password">Hasło</label>
            </div>
            <div class="col-md-6">
                <div class="form-group has-danger">
                    <div class="input-group mb-2 mr-sm-2 mb-sm-0">
                        <div class="input-group-addon" style="width: 2.6rem"><i class="fa fa-key"></i></div>
                        <input asp-for="Password" type="password" name="Password" class="form-control" id="password"
                               placeholder="Hasło" required>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-control-feedback">
                    <span class="text-danger align-middle">
                        <i class="fa fa-close"> Proszę wpisać hasło !</i>
                    </span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3 field-label-responsive">
                <label asp-for="RepeatPassword" for="password">Potwierdź Hasło</label>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <div class="input-group mb-2 mr-sm-2 mb-sm-0">
                        <div class="input-group-addon" style="width: 2.6rem">
                            <i class="fa fa-repeat"></i>
                        </div>
                        <input asp-for="RepeatPassword" type="password" name="RepeatPassword" class="form-control"
                               id="password-confirm" placeholder="Powtórz Hasło" required>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <button type="submit" class="btn btn-success"><i class="fa fa-user-plus"></i> Rejestracja</button>
                <a asp-controller="Home" asp-action="Index"><button type="button" class="btn btn-secondary"><i class="fa fa-backward"></i> Wróć do strony głównej</button></a>
            </div>
        </div>
    </form>
</div>



