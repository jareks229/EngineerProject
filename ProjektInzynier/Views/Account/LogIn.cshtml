@model ProjektInzynier.Models.LogInViewModel

<br/>
<br/>

<div class="container animated zoomIn">
    <form class="form-horizontal" role="form" method="POST" asp-action="LogIn">
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <h2 class="animated bounceIn">Logowanie użytkownika</h2>
                <hr>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3 field-label-responsive">
                <label asp-for="Login">Nazwa użytkownika</label>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <div class="input-group mb-2 mr-sm-2 mb-sm-0">
                        <div class="input-group-addon" style="width: 2.6rem"><i class="fa fa-user"></i></div>
                        <input asp-for="Login" type="text" name="Login" class="form-control" id="name"
                               placeholder="Nazwa Użytkownika" required autofocus>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-control-feedback">
                    <span asp-validation-for="Login" class="text-danger align-middle">
                        
                    </span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3 field-label-responsive">
                <label asp-for="Password" for="password">Hasło</label>
            </div>
            <div class="col-md-6">
                <div class="form-group has-danger">
                    <div class="input-group mb-2 mr-sm-2 mb-sm-0">
                        <div class="input-group-addon" style="width: 2.6rem"><i class="fa fa-key"></i></div>
                        <input asp-for="Password" type="password" name="password" class="form-control" id="password"
                               placeholder="Hasło" required>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-control-feedback">
                    <span asp-validation-for="Password" class="text-danger align-middle">
                        
                    </span>
                </div>
            </div>
        </div>
        
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <button type="submit" class="btn btn-success"><i class="fas fa-arrow-alt-circle-right"></i> Zaloguj</button>
                <a asp-controller="Home" asp-action="Index"><button type="button" class="btn btn-secondary"><i class="fa fa-backward"></i> Wróć do strony głównej</button></a>
            </div>
        </div>
    </form>
</div>