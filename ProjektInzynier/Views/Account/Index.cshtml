
@{
    ViewData["Title"] = "Index";
}
@if (User.Identity.IsAuthenticated)
{
    <div>Użytkownik Zalogowany jako @User.Identity.Name</div>
    <a asp-action="LogOut" asp-controller="Account">Wyloguj użytkownika @User.Identity.Name</a>

}
else
{
    <a asp-action="LogIn" asp-controller="Account"><h2>Logowanie</h2></a>
}

<a asp-action="Register" asp-controller="Account"><h2>Rejestracja</h2></a><br />

@if (User.Identity.IsAuthenticated)
{
    <a asp-action="ListIndex" asp-controller="Home">Lista wpisów</a>
}